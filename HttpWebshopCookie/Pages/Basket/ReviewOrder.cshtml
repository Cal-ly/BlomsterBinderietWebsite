@page
@model HttpWebshopCookie.Pages.Basket.ReviewOrderModel

<h1>Review Your Order</h1>

<form method="post" asp-page-handler="UpdateBasket">
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Line Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Basket.Items)
            {
                <tr>
                    <td>@item.ProductInBasket?.Name</td>
                    <td>
                        <input type="number" name="Quantities[@item.ProductId]" value="@item.Quantity" min="0" max="99" />
                    </td>
                    <td>@(item.ProductInBasket?.Price.ToString("C"))</td>
                    <td>@(item.LinePrice().ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit">Update Basket</button>
    <button type="submit" asp-page-handler="ProceedToCheckout">Proceed to Checkout</button>
</form>