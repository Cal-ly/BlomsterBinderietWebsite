@page
@model HttpWebshopCookie.Pages.Basket.CombinedCheckout

<h1>Checkout</h1>

<div style="text-align: center;">
    <table style="width: auto;">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Line Price</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Basket == null || Model.Basket.Items == null || Model.Basket.Items.Count == 0)
            {
                <tr>
                    <td colspan="4">No items in the basket</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.Basket.Items)
                {
                    <tr>
                        <td>@(item.ProductInBasket?.Name)</td>
                        <td>@item.Quantity</td>
                        <td>@(item.ProductInBasket?.Price.ToString("C"))</td>
                        <td>@(item.LinePrice().ToString("C"))</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <p>Total: @Model.Basket?.TotalPrice().ToString("C")</p>
</div>

<!-- User form -->
@if (Model.UserWrapper != null)
{
    <div>
        <h2>Your Information</h2>
        <p>
            Name: @Model.UserWrapper.FirstName @Model.UserWrapper.LastName
            <br>
            Email: @Model.UserWrapper.Email
            <br>
        </p>
        <form method="post">
            <input type="hidden" name="userWrapperId" value="@Model.UserWrapper!.Id" />
            <button type="submit" class="btn btn-success">Place Order</button>
            <button type="button" class="btn btn-primary" id="editButton">Edit</button>
        </form>
    </div>
}

<!-- Guest form -->
@if (Model.UserWrapper == null)
{
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Guest.FirstName">First Name:</label>
            <input asp-for="Guest.FirstName" class="form-control" />
            <span asp-validation-for="Guest.FirstName" class="text-danger"></span>

            <label asp-for="Guest.LastName">Last Name:</label>
            <input asp-for="Guest.LastName" class="form-control" />
            <span asp-validation-for="Guest.LastName" class="text-danger"></span>

            <label asp-for="Guest.Email">Email:</label>
            <input asp-for="Guest.Email" class="form-control" />
            <span asp-validation-for="Guest.Email" class="text-danger"></span>

            <label asp-for="Guest.PhoneNumber">Phone Number:</label>
            <input asp-for="Guest.PhoneNumber" class="form-control" />
            <span asp-validation-for="Guest.PhoneNumber" class="text-danger"></span>

            <label asp-for="Address.Street">Street:</label>
            <input asp-for="Address.Street" class="form-control" />
            <span asp-validation-for="Address.Street" class="text-danger"></span>

            <label asp-for="Address.City">City:</label>
            <input asp-for="Address.City" class="form-control" />
            <span asp-validation-for="Address.City" class="text-danger"></span>

            <label asp-for="Address.PostalCode">Postal Code:</label>
            <input asp-for="Address.PostalCode" class="form-control" />
            <span asp-validation-for="Address.PostalCode" class="text-danger"></span>

            <label asp-for="Address.Country">Country:</label>
            <input asp-for="Address.Country" class="form-control" />
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('editButton').addEventListener('click', function() {
            document.querySelector('input[name="Guest.FirstName"]').value = '@Model.UserWrapper.FirstName';
            document.querySelector('input[name="Guest.LastName"]').value = '@Model.UserWrapper.LastName';
            document.querySelector('input[name="Guest.Email"]').value = '@Model.UserWrapper.Email';
            document.querySelector('input[name="Guest.PhoneNumber"]').value = '@Model.UserWrapper.PhoneNumber';
            document.querySelector('input[name="Address.Street"]').value = '@Model.UserWrapper.Address.Street';
            document.querySelector('input[name="Address.City"]').value = '@Model.UserWrapper.Address.City';
            document.querySelector('input[name="Address.PostalCode"]').value = '@Model.UserWrapper.Address.PostalCode';
            document.querySelector('input[name="Address.Country"]').value = '@Model.UserWrapper.Address.Country';
        });
    </script>
}
