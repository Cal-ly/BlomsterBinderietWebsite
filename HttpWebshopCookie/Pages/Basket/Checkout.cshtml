@page
@model HttpWebshopCookie.Pages.Basket.CheckoutModel

<h1>Checkout</h1>

<div style="text-align: center;">
    <h2>Basket Items</h2>
    <table style="width: auto;">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Line Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Basket?.Items ?? new List<BasketItem>())
            {
                <tr>
                    <td>@(item.ProductInBasket?.Name)</td>
                    <td>@item.Quantity</td>
                    <td>@(item.ProductInBasket?.Price.ToString("C"))</td>
                    <td>@(item.LinePrice().ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total: @Model.Basket?.TotalPrice().ToString("C")</p>
</div>

@if (Model.UserWrapper != null)
{
    <div>
        <h2>Your Information</h2>
        <p>
            Name: @Model.UserWrapper.FirstName @Model.UserWrapper.LastName
            <br>
            Email: @Model.UserWrapper.Email
            <br>
            Phone Number: @Model.UserWrapper.PhoneNumber
        </p>
        <form method="post" asp-page-handler="User">
            <button type="submit" class="btn btn-success">Confirm Order</button>
        </form>
    </div>
}
else
{
    <form method="post" asp-page-handler="Guest">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Guest.FirstName">First Name:</label>
            <input asp-for="Guest.FirstName" class="form-control" />
            <span asp-validation-for="Guest.FirstName" class="text-danger"></span>

            <label asp-for="Guest.LastName">Last Name:</label>
            <input asp-for="Guest.LastName" class="form-control" />
            <span asp-validation-for="Guest.LastName" class="text-danger"></span>

            <label asp-for="Guest.Email">Email:</label>
            <input asp-for="Guest.Email" class="form-control" />
            <span asp-validation-for="Guest.Email" class="text-danger"></span>

            <label asp-for="Guest.PhoneNumber">Phone Number:</label>
            <input asp-for="Guest.PhoneNumber" class="form-control" />
            <span asp-validation-for="Guest.PhoneNumber" class="text-danger"></span>

            <label asp-for="Address.Street">Street:</label>
            <input asp-for="Address.Street" class="form-control" />
            <span asp-validation-for="Address.Street" class="text-danger"></span>

            <label asp-for="Address.City">City:</label>
            <input asp-for="Address.City" class="form-control" />
            <span asp-validation-for="Address.City" class="text-danger"></span>

            <label asp-for="Address.PostalCode">Postal Code:</label>
            <input asp-for="Address.PostalCode" class="form-control" />
            <span asp-validation-for="Address.PostalCode" class="text-danger"></span>

            <label asp-for="Address.Country">Country:</label>
            <input asp-for="Address.Country" class="form-control" />
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Order</button>
    </form>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}