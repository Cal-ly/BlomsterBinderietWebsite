@page
@inject BasketService ThisBasketService
@model HttpWebshopCookie.Pages.Products.IndexModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Products</h1>
    <form method="get">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" />
        <select name="pageSize">
            <option value="12">12</option>
            <option value="24">24</option>
            <option value="36">36</option>
            <option value="48">48</option>
        </select>
        <select name="sortBy">
            <option value="Name" selected="@((Model.SortBy == "Name").ToString().ToLower())">Name</option>
            <option value="Price" selected="@((Model.SortBy == "Price").ToString().ToLower())">Price</option>
        </select>
        <select name="sortOrder">
            <option value="Ascending" selected="@((Model.SortOrder == "Ascending").ToString().ToLower())">Ascending</option>
            <option value="Descending" selected="@((Model.SortOrder == "Descending").ToString().ToLower())">Descending</option>
        </select>
        <button type="submit" value="Search">Search</button>
        <button type="button" onclick="window.location.href='?searchTerm=&pageSize=12&sortBy=Name&sortOrder=Ascending'">Clear</button>
    </form>
    <table class="table table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Tags</th>
                <th scope="col">Quantity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductList)
            {
                <tr>
                    <td scope="row">@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>
                        @foreach (var tag in product.Tags)
                        {
                            <span class="badge bg-info">@tag.Occasion</span>
                            <span class="badge bg-info">@tag.Category - @tag.SubCategory</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            @{
                                int quantity = Model.ProductQuantities.ContainsKey(product.Id!) ? Model.ProductQuantities[product.Id!] : 0;
                            }
                            <span class="p-1">@quantity</span>
                            <form method="post" class="d-inline p-0">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" asp-page-handler="AddToBasket" asp-route-id="@product.Id" data-toggle="tooltip" title="Add to Basket" class="btn btn-link p-0">
                                    <i class="fas fa-cart-plus"></i>
                                </button>
                                @if (quantity > 0)
                                {
                                    <button type="submit" asp-page-handler="RemoveFromBasket" asp-route-id="@product.Id" data-toggle="tooltip" title="Remove from Basket" class="btn btn-link p-0">
                                        <i class="fas fa-cart-arrow-down"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" disabled class="btn btn-link p-0" data-toggle="tooltip" title="Item not in Basket">
                                        <i class="fas fa-cart-arrow-down text-muted"></i>
                                    </button>
                                }
                            </form>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-page="./Details" asp-route-id="@product.Id" data-toggle="tooltip" title="View Details" class="btn btn-link">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-page="./Edit" asp-route-id="@product.Id" data-toggle="tooltip" title="Edit Product" class="btn btn-link">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@product.Id" data-toggle="tooltip" title="Delete Product" class="btn btn-link">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container text-center">
        <ul class="pagination">
            @if (Model.PageIndex > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(Model.PageIndex - 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm" aria-label="Previous">
                        &laquo;
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        &laquo;
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageIndex)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@i <span class="sr-only">(current)</span></a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="?pageIndex=@i&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm">@i</a>
                    </li>
                }
            }

            @if (Model.PageIndex < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageIndex=@(Model.PageIndex + 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm" aria-label="Next">
                        &raquo;
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        &raquo;
                    </a>
                </li>
            }
        </ul>
    </div>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
</div>