@page
@inject BasketService ThisBasketService
@model HttpWebshopCookie.Pages.Products.IndexModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Products</h1>
    <table class="table table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductList)
            {
                <tr>
                    <td scope="row">@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Description</td>
                    <td>
                        <div class="d-flex align-items-center">
                            @{
                                int quantity = Model.ProductQuantities.ContainsKey(product.Id) ? Model.ProductQuantities[product.Id] : 0;
                            }
                            <span class="p-1">@quantity</span>
                            <form method="post" class="d-inline p-0">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" asp-page-handler="AddToBasket" asp-route-id="@product.Id" data-toggle="tooltip" title="Add to Basket" class="btn btn-link p-0">
                                    <i class="fas fa-cart-plus"></i>
                                </button>
                                @if (quantity > 0)
                                {
                                    <button type="submit" asp-page-handler="RemoveFromBasket" asp-route-id="@product.Id" data-toggle="tooltip" title="Remove from Basket" class="btn btn-link p-0">
                                        <i class="fas fa-cart-arrow-down"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" disabled class="btn btn-link p-0" data-toggle="tooltip" title="Item not in Basket">
                                        <i class="fas fa-cart-arrow-down text-muted"></i>
                                    </button>
                                }
                            </form>
                        </div>
                    </td>
                    <td class="btn-group">
                        <a asp-page="./Details" asp-route-id="@product.Id" data-toggle="tooltip" title="View Details" class="btn btn-link">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-page="./Edit" asp-route-id="@product.Id" data-toggle="tooltip" title="Edit Product" class="btn btn-link">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@product.Id" data-toggle="tooltip" title="Delete Product" class="btn btn-link">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
</div>

