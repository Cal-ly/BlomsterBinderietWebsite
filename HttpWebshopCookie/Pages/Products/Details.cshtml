@page
@model HttpWebshopCookie.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        @if (User.IsAtLeast("assistant"))
        {
            string status = Model.Product.IsDeleted ? "Inactive" : "Active";
            <dt class="col-sm-2">
                Product status
            </dt>
            <dd class="col-sm-10">
                @status
            </dd>
        }   
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Product.ImageUrl" onerror="this.src='/images/products/default.jpg';" alt="Product Image" style="max-width: 100%; height: auto;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.UpdatedAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a> |
    @if (User.IsAtLeast("assistant"))
    {
        <a asp-page="./Delete" asp-route-id="@Model.Product.Id">Delete</a>
    }
    <a asp-page="./Index">Back to List</a>
</div>
