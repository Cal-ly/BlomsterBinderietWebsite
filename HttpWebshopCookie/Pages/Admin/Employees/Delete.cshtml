@page
@inject UserManager<Employee> userManager
@model HttpWebshopCookie.Pages.Admin.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>

<div>
    <h4>@Model.EmployeeToDelete.FirstName @Model.EmployeeToDelete.LastName</h4>
    <div>
        <label>Email:</label>
        <span>@Model.EmployeeToDelete.Email</span>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="EmployeeToDelete.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>