@page "{id}"
@model HttpWebshopCookie.Pages.Admin.ProductTags.EditModel
@{
    ViewData["Title"] = "Edit Product Tags";
}

<h1>Edit Tags for @Model.Product.Name</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Current Tags</h4>
        <ul class="list-group">
            @foreach (var tag in Model.ProductTags)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @tag.Category
                    <form method="post" asp-page-handler="RemoveTag">
                        <input type="hidden" name="tagId" value="@tag.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h4>Add New Tag</h4>
        <form method="post" asp-page-handler="AddTag">
            <div class="form-group">
                <label for="TagId" class="control-label">Tag</label>
                <select id="TagId" name="tagId" class="form-control">
                    @foreach (var tag in Model.AvailableTags)
                    {
                        <option value="@tag.Id">@tag.Category</option>
                    }
                </select>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Add Tag</button>
            </div>
        </form>
    </div>
</div>

<p class="mt-4">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</p>