@page
@model HttpWebshopCookie.Pages.Orders.OrderListingsModel

<h1>Order Listings</h1>

<form method="post" asp-page-handler="Search">
    <div>
        <label for="FilterStatus">Order Status:</label>
        <select id="FilterStatus" name="filterStatus" asp-for="FilterStatus">
            <option value="">All</option>
            @foreach (HttpWebshopCookie.Models.OrderStatus status in Enum.GetValues(typeof(HttpWebshopCookie.Models.OrderStatus)))
            {
                <option value="@status" selected="@(Model.FilterStatus == status)">@status</option>
            }
        </select>
    </div>
    <div>
        <label for="CustomerName">Customer Name:</label>
        <input type="text" id="CustomerName" name="customerName" value="@Model.CustomerName" />
    </div>
    <button type="submit">Filter</button>
</form>

<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@(order.Customer?.FirstName + " " + order.Customer?.LastName)</td>
                <td>@order.Status</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td><a asp-page="OrderDetails" asp-route-id="@order.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
