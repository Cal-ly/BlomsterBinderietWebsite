@model HttpWebshopCookie.Pages.Products.IndexModel

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.ProductList)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td> <!-- C is for currency -->
                <td>@product.Description</td>
                <td>
                    @(Model.ProductQuantities.TryGetValue(product.Id, out int quantity) ? quantity.ToString() : "0")
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@product.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@product.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@product.Id">Delete</a>
                    <form method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <input type="submit" value="Add to Basket" asp-page-handler="AddToBasket" asp-route-id="@product.Id" />
                        <input type="submit" value="Remove from Basket" asp-page-handler="RemoveFromBasket" asp-route-id="@product.Id" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
